{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "pages/**/*.html", "use": "@vercel/static" },
    { "src": "styles/**/*", "use": "@vercel/static" },
    { "src": "utils/**/*", "use": "@vercel/static" },
    { "src": "documents/**/*", "use": "@vercel/static" },
    { "src": "components/**/*", "use": "@vercel/static" },
    { "src": "assets/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/pages/index.html" },
    { "src": "/(.*)", "dest": "/pages/$1.html" }
  ]
}
