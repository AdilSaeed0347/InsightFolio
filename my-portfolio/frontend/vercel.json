{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "pages/**/*.html", "use": "@vercel/static" },
    { "src": "styles/**/*", "use": "@vercel/static" },
    { "src": "utils/**/*", "use": "@vercel/static" },
    { "src": "documents/**/*", "use": "@vercel/static" },
    { "src": "components/**/*", "use": "@vercel/static" },
    { "src": "assets/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/pages/home.html" },          // Make home.html root page
    { "src": "/home", "dest": "/pages/home.html" },
    { "src": "/index", "dest": "/pages/index.html" },
    { "src": "/projects", "dest": "/pages/projects.html" },
    { "src": "/contact", "dest": "/pages/contact.html" }
  ]
}
